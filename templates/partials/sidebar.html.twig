{% set feed_url = blog.url == '/' or blog.url == base_url_relative ? (base_url_relative~'/'~blog.slug) : blog.url %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}

{% if config.plugins.taxonomylist.enabled %}
<div class="sidebar-content">
    <h4>Categories</h4>
    {% if theme_var('type_of_categories') == 1  %}
    {% include 'partials/taxonomylist_ordered.html.twig' with {'base_url':blog.url, 'taxonomy':'category'} %}
    {% else %}
    {% include 'partials/taxonomylist_ul_ordered.html.twig' with {'base_url':blog.url, 'taxonomy':'category'} %}
    {% endif %}
</div>
{% endif %}

{% if config.plugins.taxonomylist.enabled %}
<div class="sidebar-content">
    <h4>Popular Tags</h4>
    {% include 'partials/taxonomylist_ordered.html.twig' with {'base_url':blog.url, 'taxonomy':'tag'} %}
</div>
{% endif %}

{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
    <h4>Related Posts</h4>
    {% include 'partials/relatedpages.html.twig' %}
{% endif %}

{% if config.plugins.random.enabled %}
<div class="sidebar-content">
    <h4>Random Article</h4>
    <a class="button" href="{{ base_url }}/random"><i class="fa fa-retweet"></i> I'm Feeling Lucky!</a>
</div>
{% endif %}

{% if config.plugins.feed.enabled %}
<div class="sidebar-content syndicate">
    <h4>Syndicate</h4>
    <a class="button" href="{{ feed_url }}.atom"><i class="fa fa-rss-square"></i> Atom 1.0</a>
    <a class="button" href="{{ feed_url }}.rss"><i class="fa fa-rss-square"></i> RSS</a>
</div>
{% endif %}

<div class="sidebar-content">
    <h4>Creative Commons</h4>
    <p>Insert your license here</p>
</div>

{% if config.plugins.archives.enabled %}
<div class="sidebar-content">
    <h4>Archives</h4>
    {% include 'partials/archives.html.twig' with {'base_url':blog.url} %}
</div>
{% endif %}
