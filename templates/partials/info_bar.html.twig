<div id="info_bar" class="blog-content-item grid pure-g-r">
    <div class="block pure-u-2-3">
{% if page.nextSibling.url ==  page.prevSibling.url %}
{{ page.title }}
{% else %}
            {% if not page.isFirst %}
                <a title="Next article: {{ page.nextSibling.title }}" class="next" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ page.nextSibling.title|slice(0,25) }}...</a>
            {% else %}
				<a title="Back to blog" href="{{ base_url_absolute }}">Blog</a>
            {% endif %}

            {% if not page.isLast %}
				<span id="goto_prev">
                <a title="Previous article: {{ page.prevSibling.title }}" class="prev" href="{{ page.prevSibling.url }}">{{ page.prevSibling.title|slice(0,25) }}... <i class="fa fa-chevron-right"></i></a>
                </span>
            {% endif %}

{% endif %}

{% if query %}
  {% set count = search_results ? search_results.count : 0 %}
  for {{ t(query|e|raw) }}: {{ count }} hits!
{% endif %}

{% if uri.param('tag') %}
 <i class="fa fa-chevron-right"></i><i class="fa fa-chevron-right"></i> Post with TAG: {{ uri.param('tag') }}
{% endif %}

{% if uri.param('category') %}
 <i class="fa fa-chevron-right"></i><i class="fa fa-chevron-right"></i> Post with Category: {{ uri.param('category') }}
{% endif %}

{% if uri.param('archives_month') %}
  <i class="fa fa-chevron-right"></i><i class="fa fa-chevron-right"></i> Post in Archives: {{ uri.param('archives_month')|lower|replace({'_': " "}) }}
{% endif %}

</div>
<div id="info_bar_right" class="block size-1-3 pure-u-1-3">
{% if config.plugins.simplesearch.enabled %}
<div class="sidebar-content">
    {% include 'partials/simplesearch_searchbox.html.twig' %}
</div>
{% endif %}
</div>
</div>
